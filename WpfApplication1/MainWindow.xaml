<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TextBox x:Name="UserInput" HorizontalAlignment="Left" Height="147" Margin="247,41,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="248"/>
        <Button Content="OK" HorizontalAlignment="Left" Margin="328,242,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <Label x:Name="CPUOutput" Content="Label" HorizontalAlignment="Left" Margin="37,41,0,0" VerticalAlignment="Top" Height="147" Width="138"/>
        <ComboBox x:Name="ComboDevicesRecording" ItemsSource="{Binding recordDevices}"  HorizontalAlignment="Left" Margin="93,193,0,0" VerticalAlignment="Top" Width="209"/>
        <ComboBox x:Name="ComboDevicesPlayback" ItemsSource="{Binding playDevices}" HorizontalAlignment="Left" Margin="93,220,0,0" VerticalAlignment="Top" Width="209"/>

    </Grid>
</Window>
